.search{
	height: 100%;
	display: flex;
  	flex-direction: column;
  	align-items: center;
  	justify-content: space-between;
  	padding: 30% 0;
  	box-sizing: border-box;
}
.instruction{
	display: block;
	margin-bottom: 100rpx;
	font-size: 24px;
	color: plum;
	font-family: sans-serif;
	font-weight: bolder;
	align-items: center;
}
button{
	background-color: #fcd59a;
	color: white;
	margin: 20rpx;
	bottom: 40%;
	width: 60%;
}
button:hover{
	background-color: greenyellow;
}