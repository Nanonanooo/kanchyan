/* pages/welcome/welcome.wxss */
.container{
	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;
	position: relative;
}
.welcomeImage{
	position: absolute;
	width: 140%;
	height: auto;
	z-index: -1;
	opacity: .8;
}
.welcomeButton{
	position: fixed;
	bottom: 20rpx;
	background-color: rgba(248, 202, 200, 1);
	color: white;
	border-radius: 5px;
	animation: buttonAnim 1.5s;
	animation-fill-mode: forwards;
}
@keyframes buttonAnim{
	from{bottom: -100rpx;}
	to {bottom: 15%;}
}
.welcomeIcon{
	width: 50%;
	height: auto;
	position: fixed;
	border-style: solid;
	border-radius: 50%;
	border-color: white;
	border-width: 5rpx;
	top: 30%;
	align-self: center;
	animation: iconAnim 2s ease;
}
@keyframes iconAnim{
	from{opacity: 0;}
	to{opacity: 1;}
}
.welcomeText{
	font-family: sans-serif;
	font-size: 24px;
	position: fixed;
	top: 20rpx;
	border-style: solid;
	border-radius: 0px;
	border-color: rgba(248, 202, 200, 1);
	border-width: 5rpx;
	color: white;
	animation: textAnim 1.5s;
	animation-fill-mode: forwards;
}
@keyframes textAnim{
	from{top: -100rpx;}
	to {top: 15%;}
}